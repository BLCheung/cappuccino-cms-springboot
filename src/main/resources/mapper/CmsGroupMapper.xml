<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blcheung.zblmissyouadmin.mapper.CmsGroupMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.blcheung.zblmissyouadmin.model.CmsGroupDO">
        <result column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="delete_time" property="deleteTime" />
        <result column="name" property="name" />
        <result column="info" property="info" />
        <result column="level" property="level" />
    </resultMap>

    <select id="getGroupIdsByUserId" parameterType="java.lang.Long" resultType="java.lang.Long">
        SELECT id
        FROM cms_group AS g
        WHERE g.delete_time IS NULL
          AND g.id IN
              (
                  SELECT group_id
                  FROM cms_user_group AS ug
                  WHERE ug.user_id = #{uid}
              )
    </select>

    <select id="getGroupsByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT id, name, info, level, create_time, update_time, delete_time
        FROM cms_group AS g
        WHERE g.delete_time IS NULL
          AND g.id IN
              (
                  SELECT group_id
                  FROM cms_user_group AS ug
                  WHERE ug.user_id = #{uid}
              )
    </select>

</mapper>
