<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blcheung.zblmissyouadmin.mapper.CmsPermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.blcheung.zblmissyouadmin.model.CmsPermissionDO">
        <result column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="delete_time" property="deleteTime"/>
        <result column="name" property="name"/>
        <result column="module" property="module"/>
        <result column="mount" property="mount"/>
    </resultMap>

    <select id="getPermissionsByGroupIds" parameterType="java.util.List" resultMap="BaseResultMap">
        SELECT id, name, module, mount, create_time, update_time, delete_time
        FROM cms_permission AS p
        WHERE p.delete_time IS NULL
        AND p.mount = true
        AND p.id IN
        (
        SELECT permission_id
        FROM cms_group_permission AS gp
        WHERE gp.group_id IN
        <foreach item="groupId" index="index" collection="groupIds"
                 open="(" separator="," close=")">
            #{groupId}
        </foreach>
        )
    </select>

</mapper>
